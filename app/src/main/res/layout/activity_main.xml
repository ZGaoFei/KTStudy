<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_test_suspend1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test suspend 1"/>

    <Button
        android:id="@+id/bt_test_suspend2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test suspend 2"/>

    <Button
        android:id="@+id/bt_skip_list_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="skip to list page"/>

    <Button
        android:id="@+id/bt_switch_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="switch theme"/>

</LinearLayout>